---
import { Image } from "@astrojs/image/components";

interface Props {
  src: string;
  alt: string;
  width?: number;
}

const { src, alt } = Astro.props as Props;
---

<div>
  <Image src={src} alt={alt} width={800} format="webp" height={0} />
</div>

<style lang="scss">
  div {
    > img {
      width: 100%;
      height: auto;
    }
  }
</style>
